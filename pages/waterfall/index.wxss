/* pages/waterfall/index.wxss */
.cu-waterfall .image image {
  background-size: 350rpx;
  background-color: #8A8A8A;
  background-image: url('data:image/png;base64,');
  background-position: center;
  background-repeat: no-repeat;
  background-position-x: 8px;
}

.container {
  padding: 0rpx 30rpx;
  background: #ffffff;
}

.contribution-card {
  padding: 0;
  background: #ffffff;
}

.card-header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #24292f;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #57606a;
}

.calendar-container {
  margin: 20rpx 0 20rpx;
}

.month-spacer {
  width: 30rpx;
  margin-right: 10rpx;
}

.months {
  flex: 1;
  display: flex;
  justify-content: space-between;
  padding: 0 12rpx;
}

.month-label {
  width: 20rpx;
  font-size: 20rpx;
  color: #57606a;
  overflow: visible;
  white-space: nowrap;
}

/* 主网格区域 */
.calendar-grid {
  display: flex;
}

.weekday-column {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-right: 10rpx;
}

.weekday-label {
  height: 20rpx;
  line-height: 20rpx;
  font-size: 20rpx;
  color: #57606a;
  text-align: center;
}

.weekday-spacer {
  height: 24rpx; /* 24rpx(年份) + 4rpx(间距) + 24rpx(月份) */
  margin-bottom: 8rpx;
}

/* 贡献格子区域 */
.contribution-scroll {
  flex: 1;
  overflow: hidden;
}

.contribution-grid {
  display: flex;
  gap: 4rpx;
  padding: 0 12rpx;
}

.contribution-column {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.contribution-row {
  display: flex;
  gap: 4rpx;
}

.contribution-cell:active {
  transform: scale(1.2);
}

/* 贡献度颜色 */
.level-0 { background-color: #ebedf0; }
.level-1 { background-color: #9be9a8; }
.level-2 { background-color: #40c463; }
.level-3 { background-color: #30a14e; }
.level-4 { background-color: #216e39; }

/* 修改底部信息栏样式 */
.bottom-info {
  padding: 10rpx;
  border-top: 1rpx solid #eaecef;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  min-height: 80rpx;
}

/* 左侧日期信息样式 */
.selected-date {
  flex: 1;
  padding-right: 0rpx;
  min-height: 60rpx; /* 即使没有选中日期也保持高度 */
}

.date-text {
  font-size: 24rpx;
  color: #24292f;
  font-weight: 500;
  line-height: 1.4;
  display: block;
}

.count-text {
  font-size: 22rpx;
  color: #57606a;
  line-height: 1.4;
}

/* 右侧图例样式 */
.legend {
  padding-left: 20rpx;
  border-left: 1rpx solid #eaecef;
}

.legend-text {
  font-size: 24rpx;
  color: #57606a;
  margin-right: 16rpx;
  white-space: nowrap; /* 防止文字换行 */
}

.legend-items {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-wrap: nowrap; /* 防止图例换行 */
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.legend-item .contribution-cell {
  width: 16rpx;
  height: 16rpx;
}

.legend-item text {
  font-size: 20rpx;
  color: #57606a;
  white-space: nowrap;
}

/* 调整月份行上边距 */
.month-row {
  position: relative;
  height: 24rpx;
  margin-bottom: 8rpx;
  display: flex;
  gap: 4rpx;
  padding: 0 12rpx;
}

/* 添加空格子样式 */
.level-empty {
  background-color: transparent;
}

.contribution-column {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.contribution-cell {
  width: 20rpx;
  height: 20rpx;
  border-radius: 3rpx;
  font-size: 10px;
  text-align: center;
  color: red;
}

.month-begin {
  border-bottom: 2px solid #57606a;
}

.month-end {
  border-top: 2px solid #57606a;
}

.selected-box {
  border: 2px solid white;
}

/* 悬浮球样式 */
.fixed-ball {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999999999;
}

button[disabled] {
  text-decoration: line-through;
}

