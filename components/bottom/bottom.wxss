/* components/bottom/bottom.wxss */
@import "/colorui/main.wxss";

.bottom-text {
  font-size: 20rpx; 
  font-family:PingFangSC-Semibold,PingFang SC; 
  font-weight:600; 
  color:rgba(96,96,96,1); 
  line-height:28rpx; 
  margin: 12rpx 4rpx;
  display: inline;
}

.bottom-text-bg {
  background:rgba(237,237,237,1);
  border-radius:3px;
  padding: 4rpx 18rpx;
}

.bottom-text-bg::after {
  border: 0px;
}

.bottom-version {
  font-size:20rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(96,96,96,1);
  line-height:14px;
  margin-bottom: 76rpx;
}